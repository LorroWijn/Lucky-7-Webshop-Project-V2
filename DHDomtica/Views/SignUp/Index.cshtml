
@{
    ViewBag.Title = "Aanmeldpagina";

    //Array declaration
    var nameOfProvences = new[] { "Groningen", "Friesland", "Drenthe", "Overijssel", "Flevoland", "Gelderland", "Utrecht", "Noord-Holland", "Zuid-Holland", "Zeeland", "Noord-Brabant", "Limburg" };
    var sexOfUsers = new[] { "Man", "Vrouw", "X" };
}

<h2>Aanmelden</h2>

<h4 class="mb-3">Billing address</h4>
<form class="needs-validation" novalidate="">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="firstName">Voornaam</label>
            <input class="form-control" id="firstName" placeholder="" value="" required="" type="text">
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <label for="lastName">Achternaam</label>
            <input class="form-control" id="lastName" placeholder="" value="" required="" type="text">
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>
        <!-- Select form for sexofUser-->
        <div class="col-md-4 mb-3">
            <label for="state">Geslacht</label>
            <select class="custom-select d-block w-100" id="sex" required="">
                <option value="">Choose...</option>
                @foreach (var sexOfUser in sexOfUsers)
                {
                    <option>@sexOfUser</option>
                }
            </select>
            <div class="invalid-feedback">
                Please provide a valid sex.
            </div>
        </div>
    </div>
    <div class="mb-3">
        <label for="username">Gebruikersnaam</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">?</span>
            </div>
            <input class="form-control" id="username" placeholder="Gebruikersnaam" required="" type="text">
            <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
            </div>
        </div>
    </div>
    <!--Password label and form-->
    <div class="mb3">
        <label for="inputPassword">Wachtwoord</label>
        <div class="input-group">
            <input id="inputPassword" class="form-control" placeholder="Wachtwoord" required="" type="password">
            <div class="invalid-feedback" style="width: 100%;">
                password is required
            </div>
        </div>
    </div>
    <div class="mb3">
        <label for="inputPassword">Herhaal wachtwoord</label>
        <div class="input-group">
            <input id="inputPassword" class="form-control" placeholder="Wachtwoord" required="" type="password">
            <div class="invalid-feedback" style="width: 100%;">
                password is required
            </div>
        </div>
    </div>
    <!--Email form-->
    <div class="mb-3">
        <label for="email">Email</label>
        <input class="form-control" id="email" placeholder="you@example.com" type="email">
        <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
        </div>
    </div>
    <div class="mb-3">
        <label for="address">Adres</label>
        <input class="form-control" id="address" placeholder="1234 Main St" required="" type="text">
        <div class="invalid-feedback">
            Please enter your shipping address.
        </div>
    </div>
    <div class="mb-3">
        <label for="address2">Adres 2 <span class="text-muted">(Optional)</span></label>
        <input class="form-control" id="address2" placeholder="Apartment or suite" type="text">
    </div>
    <div class="row">
        <div class="col-md-5 mb-3">
            <label for="country">Land</label>
            <select class="custom-select d-block w-100" id="country" required="">
                <option value="">Choose...</option>
                <option>Nederland</option>
            </select>
            <div class="invalid-feedback">
                Please select a valid country.
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <label for="state">Provincie</label>
            <select class="custom-select d-block w-100" id="state" required="">
                <option value="">Kies...</option>
                @foreach (var nameOfProvence in nameOfProvences)
                {
                    <option>@nameOfProvence</option>
                }
            </select>
            <div class="invalid-feedback">
                Please provide a valid state.
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <label for="zip">Postcode</label>
            <input class="form-control" id="zip" placeholder="" required="" type="text">
            <div class="invalid-feedback">
                Zip code required.
            </div>
        </div>
    </div>

    <hr class="mb-4">
    <button class="btn btn-primary btn-lg btn-block" type="submit">Aanmelden</button>
</form>
