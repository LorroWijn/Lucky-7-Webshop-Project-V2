@model IEnumerable <DHDomtica.ViewModels.AdminManageProductViewModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productenlijst</title>
</head>
<body>
    <p>
        @Html.ActionLink("Voeg een nieuw product toe", "Create")
    </p>
    @using (Html.BeginForm("Index", "AdminManageProducts"))
    { 
        <input class="form-control" name="searchString" type="Search" placeholder="Zoeken" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
        <i class="fas fa-search"></i>
    </button>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainCategoryID)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Stock)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainCategoryID)
            </td>
            <td>
                @Html.ActionLink("Aanpassen", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Verwijderen", "Delete", new { id = item.ID })
            </td>
        </tr>
        }

    </table>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
