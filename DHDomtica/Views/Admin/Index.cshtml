@{
    ViewBag.Title = "Index";
}

<h2>Admin statistieken</h2>

<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	title: {
		text: "Aantal bezoekers"
	},
	axisY: {
		includeZero: false
	},
	toolTip: {
		shared: true
	},
	data: [{
		type: "line",
		name: "Aantal bezoekers",
		showInLegend: true,
		dataPoints: @Html.Raw(ViewBag.MonthlyVisitors)
	@*}, {
		type: "line",
		name: "Laptops",
		showInLegend: true,
		dataPoints: @Html.Raw(ViewBag.DataPoints2)
	}, {
		type: "line",
		name: "Mobiles",
		showInLegend: true,
		dataPoints: @Html.Raw(ViewBag.DataPoints3)*@
	}]
});
chart.render();

}
</script>


<div id="chartContainer" style="height: 370px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<hr/>

@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card h-100">
        <div class="card-body">
            <input type="submit" name="whichStat" value="Afgelopen Week" button class="btn btn-outline-success my-2 my-sm-0" />

            <input type="submit" name="whichStat" value="Afgelopen Maand" button class="btn btn-outline-success my-2 my-sm-0" />

            <input type="submit" name="whichStat" value="Afgelopen 3 Maanden" button class="btn btn-outline-success my-2 my-sm-0" />

            <input type="submit" name="whichStat" value="Afgelopen Jaar" button class="btn btn-outline-success my-2 my-sm-0" />
        </div>
    </div>

}
