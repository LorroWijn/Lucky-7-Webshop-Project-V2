@{
    ViewBag.Title = "LogOut";
}

<h2>LogOut</h2>

@using (Html.BeginForm("LogOut", "UserProfile", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="uitloggen" value="Ja, ik wil uitloggen" button class="btn btn-outline-success my-2 my-sm-0" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="uitloggen" value="Nee, ik wil niet uitloggen" button class="btn btn-outline-success my-2 my-sm-0" />
        </div>
    </div>
}

